<div>
  <div>
    <a href="/boards">
            Bulletin Board
          </a>
  </div>
</div>

<hr>

<div>
  <div>
    <h1>
      <%= @the_board.name %> 
    </h1>
    
    <hr>

    <h2>
      Add a new post
    </h2>

    <form action="/insert_post" method="post">
      <label for="title_box">Title</label>
      <input type="text" id="title_box" name="query_title">
      <br>

      <label for="body_box">Body</label>
      <textarea id="body_box" name="query_body"></textarea>
      <br>

      <label for="expires_on_box">Expires on</label>
      <input type="date" id="expires_on_box" name="query_expires_on">
      <br>

      <input type="hidden" name="query_board_id" value="<%= @the_board.id %>">

      <button>Add post</button>
    </form>       

</div>

<hr>

<div>
  <div>
    <h2>
      Active posts
    </h2>

    <table border="1">
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Posted on</th>
        <th>Expires on</th>
      </tr>
      <% @active_posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td><%= post.created_at.strftime("%b %d, %Y") %></td>
          <td><%= post.expires_on.strftime("%b %d, %Y") %></td>
        </tr>
        <% end %>   
    </table>

      <h2>
      Expired posts
      </h2>

    <table border="1">
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Posted on</th>
        <th>Expires on</th>
      </tr>
      <% @expired_posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td><%= post.created_at.strftime("%b %d, %Y") %></td>
          <td><%= post.expires_on.strftime("%b %d, %Y") %></td>
        </tr>
        <% end %>   
    </table>  

  </div>
</div>

<hr>
